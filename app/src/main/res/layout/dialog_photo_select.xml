<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_select_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从相册选择"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/color_70c8ea" />
    <TextView
        android:id="@+id/tv_select_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_select_album"
        android:layout_alignLeft="@+id/tv_select_album"
        android:textColor="@color/color_70c8ea"/>
    <TextView
        android:id="@+id/tv_select_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_select_photo"
        android:layout_alignLeft="@+id/tv_select_photo"
        android:textColor="@color/color_70c8ea" />
</RelativeLayout>