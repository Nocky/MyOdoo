            android:text="可用"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@mipmap/right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
